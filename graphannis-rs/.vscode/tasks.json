{
    "version": "2.0.0",
    "presentation": {
        "reveal": "always",
        "panel": "new"
    },
    "tasks": [
        {
            "taskName": "cargo build (release)",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "--release"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$rustc"
        },
        {
            "taskName": "cargo build (debug)",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build"
            ],
            "group": "build",
            "problemMatcher": "$rustc"
        },
        {
            "taskName": "cargo check",
            "type": "shell",
            "command": "cargo",
            "args": [
                "check"
            ],
            "group": "build",
            "problemMatcher": "$rustc"
        },
        {
            "taskName": "cargo run",
            "type": "shell",
            "command": "cargo",
            "args": [
                "run"
            ],
            "problemMatcher": "$rustc"
        },
        {
            "taskName": "cargo test",
            "type": "shell",
            "command": "cargo",
            "args": [
                "test"
            ],
            "group": "test",
            "problemMatcher": "$rustc"
        },
        {
            "taskName": "cargo clean",
            "type": "shell",
            "command": "cargo",
            "args": [
                "clean"
            ]
        }
    ]
}