{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cargo build (release)",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "--all",
                "--release"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$rustc"
        },
        {
            "label": "cargo build (debug)",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "--all",
            ],
            "group": "build",
            "problemMatcher": "$rustc"
        },
        {
            "label": "cargo check",
            "type": "shell",
            "command": "cargo",
            "args": [
                "check", "--all", "--tests", "--benches"
            ],
            "group": "build",
            "problemMatcher": "$rustc"
        }
    ]
}